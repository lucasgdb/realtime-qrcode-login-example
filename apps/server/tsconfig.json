{
  "compilerOptions": {
    "allowJs": false,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
